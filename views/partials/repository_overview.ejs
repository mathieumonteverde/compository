<article class="repository-overview-container col-lg-4 col-md-4 col-sm-6 col-xs-12">
  <section class="repository-overview text-left box-shadow">
    <div class="color-badge color-badge-<%= count %>"></div>

    <h2> <%= data.name %> </h2>
    <h3> <%= data.owner %> </h3>
    <hr class="subtitle"/>
    <a class="full-name-link" href="https://github.com/<%= data.full_name%>"
      title="See the repository on GitHub"
      target="_blank"><%= data.full_name %></a>
    <hr />
    <article class="repositiory-description">
      <% if (data.description !== '') { %>
        <%= data.description %>
      <% } else { %>
        No description found on the repository...
      <% } %>
    </article>
    <hr />
    <article class="repository-stats">
      <h4>Statistics</h4>
      <ul class="list-group repository-stats-list">
        <li class="list-group-item icon-list-item last-update-icon last-update-statistic"
        data-raw="<%= data.updated_hours_ago %>" data-type="last-update-statistic">
          Last updated on <%= data.pushed_at %>
        </li>
        <li class="list-group-item icon-list-item contributor-icon contributors-statistic ajax-statistic"
        data-source="number_contributors" data-text-complement=" contributors" data-type="contributors-statistic">
          <% include ../partials/loader %>
        </li>
        <li class="list-group-item icon-list-item fork-icon forks-statistic"
        data-raw="<%= data.forks_count %>" data-type="forks-statistic">
          <%= data.forks_count %> forks
        </li>
        <li class="list-group-item icon-list-item commit-icon commits-statistic ajax-statistic"
        data-source="number_commits" data-text-complement=" commits" data-type="commits-statistic">
          <% include ../partials/loader %>
        </li>
        <li class="list-group-item icon-list-item issue-icon issues-statistic"
        data-raw="<%= data.open_issues_count %>" data-type="issues-statistic">
          <%= data.open_issues_count %> open issues
        </li>
      </ul>
    </article>
  </section>
</article>
